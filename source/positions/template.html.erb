<% p = locals[:position] %>

<% if p.try(:[], 'image') %>
	<% set :imgTitle, p[:image].title %>
	<% set :imgUrl, p[:image].url %>
<% end %>

<%= p[:jobTitle] %>
<%= p[:id] %>
<%= p[:jobDescription] %>
<%= p[:jobRequirements] %>
<%= p[:publishStartdate] %>
<%= p[:publishEnddate] %>
<%= p[:contactName] %>
<%= p[:contactPhone]%>
<%= p[:contactEmail] %>
<%= p[:country] %>

<% if p.try(:[], 'image') %>
<%= image_tag imgUrl, :width => "600", :height => "600" %>
<% end %>






